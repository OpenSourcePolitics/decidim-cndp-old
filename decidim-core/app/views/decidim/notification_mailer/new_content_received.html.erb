    <%= translated_attribute(@parent_title) %> <!-- Translate title if object is a proposal -->
  <% else %>
    <%= @parent_title %>
  <% end %>
</p>

<h6 class="content-title"> <%= @resource_title %> </h6>

<p> <%= @body %> </p>

<!-- link to show  -->
<p>
  <%= @event_instance.email_url %>
</p>

<!-- link to dashboard moderation  -->
<p>
  <%= @event_instance.email_moderation_url(@moderation_url) if @moderation %>
</p>
